<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_love_chlid"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_love_chlid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_love_chlid" />

    <TextView
        android:id="@+id/tv_love_chlid_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#DC1B1B"
        app:layout_constraintLeft_toRightOf="@id/tv_love_chlid_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_love_chlid" />

    <TextView
        android:id="@+id/tv_love_chlid_newtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_love_chlid_title" />

</androidx.constraintlayout.widget.ConstraintLayout>